<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MetaHealthMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MetaHealthMaui"
    xmlns:views="clr-namespace:MetaHealthMaui.Views"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="META - HEALTH"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <!--Menu items-->
    <ShellContent
        Title="Menu"
        ContentTemplate="{DataTemplate views:BurgerMenu}"
        Route="BurgerMenu" />

    
    <!--Tabbar/appbar-->
    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Clinics"
            ContentTemplate="{DataTemplate views:ClinicsPage}"
            Route="ClinicsPage" />
        <ShellContent
            Title="Bookings"
            ContentTemplate="{DataTemplate views:BookingsPage}"
            Route="BookingsPage" />
        <ShellContent
            Title="Reports"
            ContentTemplate="{DataTemplate views:ReportsPage}"
            Route="ReportsPage" />
    </TabBar>

</Shell>
